<!DOCTYPE html>
<html>
<head>
  <title>Skillfair EJS</title>
  <% include partials/head %>

</head>
<body>


<% include partials/nav %>

  <section class="container">
    <!--form --->
    <div class="row">
        <h2>New</h2>
     <form class="contact-form" action="/contacts" method="post">
      <div class="form-group">
       <label for="name">Name</label>
       <input class="form-control" type="text" id="name" name="name" value="">
      </div>
      <div class="form-group">
       <label for="email">Email</label>
       <input class="form-control" type="text" id="email" name="email" value="">
      </div>
      <div class="form-group">
       <label for="phone">Phone</label>
       <input class="form-control" type="text" id="phone" name="phone" value="">
      </div>
      <div>
       <button type="submit" class="btn btn-default">Submit</button>
      </div>
     </form>
    </div>

   <!-- list -->
   <%  contacts.forEach(function(contact) { %>
    <div class="row" id ="contact-list">
          <p> <%= contact.name %> </p>
          <p> <%= contact.email %> </p>
          <p> <%= contact.phone %> </p>
          <!--button class="btn btn-default" href="/contacts/<%= contact._id %>" >Edit</button-->
          <a href="/contacts/<%= contact._id %>/edit">Edit</a> <!-- 1 -->

          <form action="/contacts/<%= contact._id %>?_method=delete" method="post">
              <button class="btn btn-default" href="#" onclick="confirm('Do you want to delete this?')?this.parentElement.submit():null;">Delete</button>
          </form>
   </div>
   <% }) %>

  </section>

  <% include partials/footer %>
</body>
</html>
